extends layout

mixin post-card(post)
    - var headerColor = post.isFeatured ? 'card-header-danger' : ''
    .col-md-4
        .card.info
            .card-header(class=`${headerColor}`)
                h3.card-title #{post.title}
                h6.category #{post.category}
            .card-body #{post.header}

mixin team-player(author)
    .col-md-4
        .team-player
            .card.card-plain
                .col-md-6.ml-auto.mr-auto
                    a(href=`/authors/${author.id}`)
                        img.img-raised.rounded-circle.img-fluid(src=`/img/faces/${author.img}` alt='Thumbnail Image')
                h4.card-title #{author.name}
                    br
                    small.card-description.text-muted #{author.title}
                .card-body
                    p.card-description #{author.description}
                .card-footer.justify-content-center
                    a.btn.btn-link.btn-just-icon(href=`/authors/${author.id}`)
                        i.fa.fa-twitter
                    a.btn.btn-link.btn-just-icon(href=`/authors/${author.id}`)
                        i.fa.fa-instagram
                    a.btn.btn-link.btn-just-icon(href=`/authors/${author.id}`)
                        i.fa.fa-github

    


